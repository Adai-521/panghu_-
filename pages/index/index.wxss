.indexContainer .navSwiper{
    width: 100%;
    height: 300rpx;
}
.indexContainer .navSwiper image{
    width: 100%;
    height: 300rpx;
}

/* 导航样式 */
.navContainer{
    display: flex;
}
.navContainer .navItem{
    width: 20%;
    display: flex;
    flex-direction: column;
    align-items: center;  
}
.navContainer .navItem .iconfont{
    font-size: 50rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background: rgb(240, 19, 19);
    text-align: center;
    line-height: 100rpx;
    color: #fff;
    margin: 25rpx 0;
}
.navContainer .navItem text{
    font-size: 26rpx;
}

/* 推荐歌曲 */
.recommendContainer{
    padding: 40rpx 20rpx;
}

/* 滑动板块 */
.scrollBar{
    display: flex;
    height: 300rpx;
}

.scrollBar .scrollItem{
    display: flex;
    flex-direction: column;
    width: 200rpx;
    margin-left: 20rpx;
}
.scrollBar .scrollItem image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
}
.scrollBar .scrollItem text{
    font-size: 26rpx;
    line-height: 40rpx;
    /* white-space: nowrap; */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;  /*webkit盒模型*/
    -webkit-line-clamp:2;  /*控制行数*/
    -webkit-box-orient: vertical;  /*规定框的子元素应该被水平或垂直排列。*/
}

